  </path>
  
  
  <patternset id="excluded.from.module.lucian-core">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.lucian-core">
    <patternset refid="excluded.from.module.lucian-core"/>
  </patternset>
  
  <path id="lucian-core.module.sourcepath">
    <dirset dir="${module.lucian-core.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.lucian-core" depends="compile.module.lucian-core.production,compile.module.lucian-core.tests" description="Compile module lucian-core"/>
  
  <target name="compile.module.lucian-core.production" depends="register.custom.compilers" description="Compile module lucian-core; production classes">
    <mkdir dir="${lucian-core.output.dir}"/>
    <javac2 destdir="${lucian-core.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.lucian-core}/javac">
      <compilerarg line="${compiler.args.lucian-core}"/>
      <bootclasspath refid="lucian-core.module.bootclasspath"/>
      <classpath refid="lucian-core.module.production.classpath"/>
      <src refid="lucian-core.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.lucian-core"/>
    </javac2>
    
    <copy todir="${lucian-core.output.dir}">
      <fileset dir="${module.lucian-core.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.lucian-core.tests" depends="register.custom.compilers,compile.module.lucian-core.production" description="compile module lucian-core; test classes" unless="skip.tests"/>
  
  <target name="clean.module.lucian-core" description="cleanup module">
    <delete dir="${lucian-core.output.dir}"/>
    <delete dir="${lucian-core.testoutput.dir}"/>
  </target>
