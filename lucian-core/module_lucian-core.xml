    <path refid="library.maven:_org.slf4j:slf4j-api:1.7.25.classpath"/>
  </path>
  
  <path id="lucian-core.module.classpath">
    <path refid="${module.jdk.classpath.lucian-core}"/>
    <pathelement location="${lucian-core.output.dir}"/>
    <path refid="library.maven:_at.favre.lib:bcrypt:0.8.0.classpath"/>
